{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "baseUrl": ".",
      "paths": {
         "@Tests/Transaction/*": [ "tests/Billing/Transaction/*" ],
         "@Tests/Shared/*": [ "tests/Billing/Shared/*" ],
         "@Tests/Apps/*": [ "tests/Apps/*" ],
         "@Transaction/*": [ "src/Billing/Transaction/*" ],
         "@Shared/*": [ "src/Billing/Shared/*" ],
         "@Apps/*": [ "src/Apps/*" ]
      },
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "sourceMap": true,
      "noUnusedLocals": true
   }
}
